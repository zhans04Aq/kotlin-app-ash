<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context=".student_profile"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myRelativeLayout1"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hunter_banner"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/hunter_pp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/change_pp_icon"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="235dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/chat" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/video" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/phone"

                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steve"
        android:layout_below="@id/myRelativeLayout1"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="28dp"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hunter"
        android:layout_below="@id/studentName"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textSize="28dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:padding="10dp"
        android:id="@+id/myRelativeLayout2"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myLinearLayout3"

            >


            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/descrition_icon"

                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginVertical="1dp"
                android:layout_marginLeft="5dp"

                />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/edit_icon"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/myLinearLayout3"
            android:text="Lorem ipsum dolor sit amet consectetur. Ac viverra ac tristique pellentesque. Amet pulvinar nisi in sit ac eget consectetur ornare. Odio pharetra vulputate pharetra eget ultricies non sagittis. "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="25dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myRelativeLayout2"
        android:padding="10dp"
        android:id="@+id/myRelativeLayout3"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myLinearLayout4"
            >


            <ImageView
                android:id="@+id/experienceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/briefcase"

                />

            <TextView
                android:id="@+id/experienceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginVertical="1dp"
                />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/edit_icon"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/experienceText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/myLinearLayout4"
            android:text="North Caspian Operating Company"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="45dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/myRelativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myRelativeLayout3"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/myLinearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/languageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/language_icon"

                />

            <TextView
                android:id="@+id/languageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginLeft="5dp"
                android:text="Language"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/editIcon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/edit_icon" />


        </LinearLayout>

        <TextView
            android:id="@+id/languageText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/myLinearLayout6"
            android:layout_marginLeft="30dp"
            android:text="English, Russian, Kazakh"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>


</RelativeLayout>